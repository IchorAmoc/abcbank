<div>
    <label>Customer</label>
    <select name="customer">
    <%= customers.forEach(customer => { %>
        <% if(customer.id === account.account_number) { %> 
            <option selected label="<%= customer.first_name + " " + customer.last_name %>" value="<%= customer.id %>">    
        <% }else { %> 
            <option label="<%= customer.first_name + " " + customer.last_name %>" value="<%= customer.id %>">    
        <% } %> 
    <% }) %>
    </select>
</div>
<div>
    <label>Account name</label>
    <input type="date" name="publishDate" 
        value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>" >
</div>