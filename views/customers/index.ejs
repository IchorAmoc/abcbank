<h2>All Customers</h2>
<form action="/customers" method="GET"> 
    <label>Search</label>
    <input type="text" name="last_name" value="<%= searchFor.last_name %>" placeholder="Last name">
    <button type="submit">Search</button>
</form>
<br>
<% customers.forEach(customer => { %>
    <div><h3><%= customer.first_name + " " + customer.last_name %></h3>
        <h4>Accounts:</h4>
    <ul><% accounts.forEach(account => { %>
        <li><%= account.account_name + " | Account number: " + account.account_number %></li>
    <% }) %></ul>
    <a href="/customers/<%= customer.personal_number %>">View Account</a> 
    <a href="/customers/<%= customer.id %>/edit">Edit Account</a> 
    <%- include('../partials/deleteForm', { url: `/customers/${ customer.id }` }) %> <br> <br>
    </div>
<% }) %>